@inject NavigationManager _navManager
<div>
    @Waypoint.Symbol (@Waypoint.X, @Waypoint.Y) - @Waypoint.Type <button class="btn btn-secondary" @onclick="(() => OnDetails.InvokeAsync(Waypoint.Symbol))">Details</button>
</div>

@code {
    [Parameter] public SystemWaypoint Waypoint { get; set; }
    [Parameter] public EventCallback<string> OnDetails { get; set; }
}
